<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">会員一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>操作</th> <!-- New column for delete action -->
          </tr>
        </thead>
        <% @end_users.each do |end_user| %>
          <tr>
            <td><%= end_user.id %></td>
            <td><%= link_to end_user.name, admin_end_user_path(end_user) %></td>
            <td><%= end_user.email %></td>
            <td>
              <%= link_to "削除", admin_end_user_path(end_user), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </table>
      <div class="pagination">
        <%= paginate @end_users %>
      </div>
    </div>
  </div>
</div>
