<div class="container mt-4">
  <div class="row">
    <div class="col-md-4 text-center mx-auto">
      <%= image_tag @end_user.get_profile_image(100, 100), class: 'img-fluid rounded-circle' %>
      <h3 class="mt-3"><%= @end_user.name %></h3>
      <div class="btn-group mt-3">
        <%= link_to "プロフィール編集", edit_public_end_user_path, class: 'btn btn-primary' %>
        <%= link_to "プロフィール削除", public_check_path, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>


<div class="container mt-4">
  <div class="cover-index">
    <h1 class="font-weight-normal mt-3 text-center">マイイラスト</h1>
    <div class="row justify-content-center">
      <% @posts.each do |post| %>
      <div class="col-md-6 mb-4">
        <div class="one-post">
          <%= link_to public_post_path(post.id) do %>
            <%= image_tag post.get_image, size: '300x200' %>
          <% end %>
          <p class="mt-2">イラスト名：<%= post.name %></p>
          <p>説明：<%= post.caption %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <%= paginate @posts %>
</div>
