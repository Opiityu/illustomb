<div>
  <%= image_tag @post.get_image %>
  <p>イラスト名：<%= @post.name %></p>
  <p>説明:<%= @post.caption %></p>
  <p>ユーザーネーム:<%= @post.end_user.name %></p>
  <p>埋葬日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post.end_user == current_end_user %>
    <%= link_to "削除", public_post_path(@post), method: :delete %>
  <% end %>
  <div id="likes_buttons_<%= @post.id %>">
  <%= render partial: "public/whies/why", locals: { post: @post } %>
　</div>
</div>