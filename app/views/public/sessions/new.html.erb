<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center">ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
        <div class="form-floating">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
        </div>
        <div class="form-floating mt-3">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
        </div>
        <div class="mt-3">
          <%= f.submit "ログイン", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <h5 class="mt-3">新規登録はこちらから</h5>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
