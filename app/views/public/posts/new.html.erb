<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h1 class="text-center">画像投稿フォーム</h1>
      <%= form_with model: @post, url: public_posts_path, method: :post, local: true do |f| %>
        <h4>画像</h4>
        <%= f.file_field :image, accept: "image/*" %>
        <h4>イラスト名</h4>
        <%= f.text_field :name %>
        <h4>説明</h4>
        <%= f.text_area :caption %>
        <%= f.submit '投稿', class: 'btn btn-primary btn-block mt-3' %>
      <% end %>
    </div>
  </div>
</div>

